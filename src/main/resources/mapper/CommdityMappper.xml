<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.sale.supermarket.dao.CommodityDao">
    <insert id="add">
        insert into tb_commodity(id,`name`,specification,units,price,stock)
        values (
            #{id,jdbcType=INTEGER},
            #{name,jdbcType=CHAR},
            #{specification,jdbcType=CHAR},
            #{units,jdbcType=CHAR},
            #{price,jdbcType=DOUBLE},
            #{stock,jdbcType=INTEGER}
        );
    </insert>
    <select id="get" resultType="com.sale.supermarket.pojo.Commodity">
        SELECT
        *
        FROM
        `tb_commodity`
        WHERE
        <if test="id !=null and id != ''">
            id = #{id}
        </if>
    </select>
    <select id="getCommodity" resultType="com.sale.supermarket.pojo.Commodity">
        SELECT
        *
        FROM
        `tb_commodity`
        WHERE
        <if test="id !=null and id != ''">
            id = #{id}
        </if>
    </select>

    <update id="update">
        update `tb_commodity`
        <trim prefix="set"  suffixOverrides=",">
            <if test=" username !=null and username !='' ">username = #{username, jdbcType=INTEGER},</if>
            <if test=" password !=null and password !='' "> password = #{password, jdbcType=CHAR },</if>
            <if test=" role !=null and role !='' ">role = #{role,jdbcType=INTEGER}</if>
        </trim>
        where
        id = #{id, jdbcType=INTEGER}
    </update>
    <delete id="delete">
        delete
        from tb_commodity
        where
        <if test="id !=null and id != ''">
            id = #{id}
        </if>

    </delete>

</mapper>